@model Dominio.Admin

@{
    ViewBag.Title = "Editar";
    Layout = "~/Areas/Painel/Views/Shared/_Painel.cshtml";
}

<h2 style="margin-top: 100px">Editar</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Admin</legend>

        @Html.HiddenFor(model => model.AdminId)

        <div class="editor-label">
            @Html.LabelFor(model => model.AdminLogin)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AdminLogin)
            @Html.ValidationMessageFor(model => model.AdminLogin)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AdminSenha)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AdminSenha)
            @Html.ValidationMessageFor(model => model.AdminSenha)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AdminNome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AdminNome)
            @Html.ValidationMessageFor(model => model.AdminNome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AdminEmail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AdminEmail)
            @Html.ValidationMessageFor(model => model.AdminEmail)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AdminFoto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AdminFoto)
            @Html.ValidationMessageFor(model => model.AdminFoto)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
