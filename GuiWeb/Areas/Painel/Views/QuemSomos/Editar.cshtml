@model Dominio.QuemSomos

@{
    ViewBag.Title = "Editar";
    Layout = "~/Areas/Painel/Views/Shared/_Painel.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>QuemSomos</legend>

        @Html.HiddenFor(model => model.QuemSomosId)

        <div class="editor-label">
            @Html.TextAreaFor(model => model.QuemSomosDescricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuemSomosDescricao)
            @Html.ValidationMessageFor(model => model.QuemSomosDescricao)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
