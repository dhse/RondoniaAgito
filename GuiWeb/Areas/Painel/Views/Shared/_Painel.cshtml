<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                </button>
                <a class="brand" href="#">Painel</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="active">
                           @Html.ActionLink("Home","BemVindo","Home")     
                        </li>
                        <li class="">
                            @Html.ActionLink("Admin", "Index", "Administrador")
                        </li>
                        <li class="">
                            <a href="#">Eventos</a>
                        </li>
                        <li class="">
                            <a href="#">As Minas Pira</a>
                        </li>
                        <li class="">
                            @Html.ActionLink("Contato", "Index", "Contato")
                        </li>
                        <li class="">
                            @Html.ActionLink("Quem Somos", "Index", "QuemSomos")
                        </li>
                        <li class="">
                            @Html.ActionLink("Sair", "Logout", "Home")
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()

    <p>Rodape</p>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
